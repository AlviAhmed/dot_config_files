# -*- mode: snippet -*-
# name: somepackages
# key: sompkg
# --
\documentclass[11pt]{article}
\usepackage[margin=1in]{geometry}     
\usepackage[utf8]{inputenc} %accepting different input encodings (i.e utf)
\usepackage[T1]{fontenc} %allows user to select font encodings 
\usepackage{graphicx} %enhanced support for the package "graphics"
\usepackage{grffile} %extended file name support for graphics
\usepackage{longtable} %allows table to flow over page boudaries
\usepackage{wrapfig} %produces figures which text can flow around 
\usepackage{rotating} %part of graphics library, can rotate stuff I guess
\usepackage[normalem]{ulem} %extra package for underlining, breaks over line ends
\usepackage{nccmath}
\usepackage{amsmath} %mathematical package
\usepackage{textcomp} %text font support
\usepackage{amssymb}
\usepackage{capt-of}
\usepackage{titlesec} %allows customization of titles (i.e section)
\usepackage{float} %allows the use of figures
\usepackage[font=small]{subcaption} %allows for subfigures
\usepackage{multicol} %can create multiple columns in specified regions
\usepackage{mwe}
\usepackage{lipsum} %generating dummy text to check the formatting
\usepackage{titling} %allows moving up and down titles
\usepackage{enumitem} %more features for lists
\usepackage[font=normalsize, labelfont=bf, skip = 0pt, justification = centering]{caption}