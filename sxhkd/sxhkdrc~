
# Pulse Audio controls
XF86AudioRaiseVolume  
	pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo +5%  
XF86AudioLowerVolume     
	pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo -5%  
XF86AudioMute   
	pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle # mute sound 


# Screen brightness controls
XF86MonBrightnessUp
	xbacklight -inc 20 & # increase screen brightness
XF86MonBrightnessDown  
	xbacklight -dec 20 & # decrease screen brightness


super + {g,t}
	 xbacklight {-inc 20 &, -dec 20 &} 

##--If keyboard has no media keys 
super + {x,c}
	pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo {-5%,+5%} 

super + z
	pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle # mute sound 
##--If keyboard has no media keys	


# super + b
#  	xbacklight -inc 20 &
# super + shift + b
#  	xbacklight -dec 20 &



# Restarting the background
super + alt + b 
	feh --bg-fill ~/Pictures/wallpapers/wallpaper.png 


# emacs 
super + m 
	emacsclient -n -create-frame --alternate-editor=""

# internet browser 
super + i 
	brave-browser	

# terminal emulator
super + Return 
	xfce4-terminal --hide-scrollbar --hide-menubar
# xfce4-terminal --maximize --hide-menubar  --hide-borders --hide-scrollbar

# Launching Dmenu
super + d
 	dmenu_run	 

# Launching Thunar 
super + shift + f 
	thunar 

# Calling the Appfinder 
super + shift + a 
 	xfce4-appfinder

# Screenshooter
super + shift + x 
	xfce4-screenshooter


# Restarting SXHKD
super + Escape
	pkill -USR1 -x sxhkd


# allow tint2 to go over the window
super + p
	xdo above -t "$(xdo id -N Bspwm -n root | sort | head -n 1)" $(xdo id -n tint2)

super + shift  + q
	xdo close

###---BSPWM BINDINGS---### 

# Selecting Nodes Up to Parent
super + shift + p
	bspc node -f @parent

# 0.33 ratio between windows
super + ctrl + r
	bspc node --ratio 0.33

# Controlling Gaps  (small increments)
super + shift + bracket{left,right}
	bspc config -d focused window_gap "$(($(bspc config -d focused window_gap) {-,+} 5 ))" 

# Controlling Gaps  (large increments)
super + shift + ctrl + bracket{left,right}
	bspc config -d focused window_gap "$(($(bspc config -d focused window_gap) {-,+} 20 ))"

# Rotation of layout
super + {_,shift + }e
	bspc node @/ --rotate {90,-90}

# quit bspwm normally
super + alt + Escape 
	bspc quit & xfce4-session-logout

# close 
super + {_,shift + }q  
	{xdo close,bspc node -c}



#kill 
super + shift + w
	bspc node -k

# alternate between the tiled and monocle layout
super + f
	 bspc desktop -l next


# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused


# swap the current node and the biggest node
super + g
	bspc node -s biggest


##--Setting Flags and States--## 

# set the window state
super + space
	bspc node -t floating 

# super + s 
# 	bspc node -t pseudo_tiled 

super + t
	bspc node -t tiled  

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private} 


##--Focus and Swapping--##

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east} 

# focus the node in the given direction (alternate keys)
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east} 


focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
alt + {_,shift + }Tab  
	bspc node -f {next,prev}.local


# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local


# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on


focus nodes also with different monitors
super + {1-9,0}
    D={1-9,10}; \
    bspc desktop -f "$(bspc query -D -m | sed -n "$D p")";
	
super + shift + {1-9,0}
    D={1-9,0}; \
    bspc node -d "$(bspc query -D -m | sed -n "$D p")" 

super + ctrl + alt + {1-9,0}    
    D={1-9,0}; \
    bspc desktop -s "$(bspc query -D -m | sed -n "$D p")" 

# Switching monitors
super + {comma,period}
	bspc monitor -f {prev,next}

# Transfering Nodes between Monitors
super + shift + comma
	bspc node -m VGA-1

super + shift + period
	bspc node -m LVDS-1


# Transfering Desktops between Monitors
super + ctrl + alt + comma
	bspc desktop -m VGA-1 

super + ctrl + alt + period
	bspc desktop -m LVDS-1


###---Focus or send to selected desktop---###
super + {_,shift + }{1-9,0} 
	bspc {desktop -f,node -d} '^{1-9,10}'

###---Adding/Removing Desktops---###
super + a
	bspc monitor -a 1

super + shift + d
	bspc desktop -r
###---Adding/Removing Desktops---###

###---Preselection---###
# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + alt + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + alt + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + alt + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
###---Preselection---###

# move/resize


# expand a window by moving one of its side outward
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + ctrl + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + ctrl + alt + {h,j,k,l}
	bspc node -v {-60 0,0 60,0 -60,60 0}


# ###---Setting Hidden Node Flag---### 
super + n 
	bash ~/bash_scripts/hidden_node.sh
# ###---Setting Hidden Node Flag---###


# Creating Receptacles 
super + shift + i; {h,j,k,l}
	bspc node @/ -p {west, south, north, east} -i
# Kill all  receptacles 
super + shift + i; d
	for i in $(bspc query -N -n .leaf.\!window.local); do bspc node $i -k; done
# Transplant node to receptacle 
super + shift + i; t 
	bspc node -n $(bspc query -N -n .leaf.\!window.local)


# Swapping Monitors 
super + s 
	bspc desktop LVDS-1:focused --swap VGA-1:focused; 



# Restarting bspwm
super + shift + b 
	bash ~/.config/bspwm/bspwmrc && feh --bg-fill ~/Pictures/wallpapers/wallpaper.png


