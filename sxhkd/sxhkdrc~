###---Media Controls---### 

# Pulse Audio controls
XF86AudioRaiseVolume  
# 	amixer sset Master 5%+
	pactl set-sink-volume 0 +5% && ~/bash_scripts/dwm_volume.sh
XF86AudioLowerVolume     
#	amixer sset Master 5%-
	pactl set-sink-volume 0 -5% && ~/bash_scripts/dwm_volume.sh
XF86AudioMute   
#	amixer sset Master toggle
	pactl set-sink-mute 0 toggle # mute sound


# Screen brightness controls
XF86MonBrightnessUp
	xbacklight -inc 20 # increase screen brightness
XF86MonBrightnessDown  
	xbacklight -dec 20 # decrease screen brightness

###---Media Controls---###

# ###---Custom Prog Launcher Keys---###
# emacs light/dark modes 
super + e
	bash ~/bash_scripts/toggle_emacs_theme.sh

# Launching Thunar
super + t 
	thunar


# emacs 
super + m 
	emacsclient -n -create-frame --alternate-editor=""

# internet browser 
super + i 
	brave-browser	

# terminal emulator
super + Return 
 	xfce4-terminal --maximize --hide-menubar  --hide-borders --hide-scrollbar

# program launcher
super + d
 	dmenu_run	 


# Calling the Appfinder 
super + shift + a 
 	xfce4-appfinder

# ###---Custom Prog Launcher Keys---###


# ###---Binding for Screen Shooter---### 
super + shift + x 
	xfce4-screenshooter
# ###---Binding for Screen Shooter---###


# # make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


super + shift + w 
	 ~/Documents/herb_examples/savestate.sh > ~/Documents/herb_examples/mystate
super + w
	 ~/Documents/herb_examples/loadstate.sh < ~/Documents/herb_examples/mystate



	

