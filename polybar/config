[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555 
foreground-clear = #ffffff
primary = #ffb52a
secondary = #e60053
alert = #bd2c40



;;;--- First Bar For External Monitor---;;; 
[bar/example]
monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 20
offset-x = 0
offset-y = 1
radius = 6.0

background = ${colors.background}
foreground = ${colors.foreground}

separator = |


line-size = 4
line-color = #f00

border-size = 1
border-color = #FF00FF


padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = SourceCodePro:style=Bold:pixelsize=11;
font-1 = HackNerdFont:pixelsize=10;1
font-2 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;
font-4 = DejaVuSans:style=Bold:pixelsize=10;1

modules-left = bspwm
modules-center = xwindow mpd pulseaudio 
modules-right = filesystem xbacklight memory cpu battery temperature date wlan

tray-position = right
tray-padding = 2
tray-background= #0000AA


wm-restack = bspwm 
             
override-redirect = true
enable-ipc = true                

; scroll-up = bspwm-desknext 
; scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize  
